<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_auth_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_error_auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:text="@string/error_auth"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_splash_sign_out"
            android:theme="@style/AppTheme.Button.Borderless" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_io_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:text="@string/error_io"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_retry_io"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_splash_retry"
            android:theme="@style/AppTheme.Button.Borderless" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_location_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:text="@string/error_location"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_location_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_location_settings"
                android:theme="@style/AppTheme.Button.Borderless"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_retry_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_splash_retry"
                android:theme="@style/AppTheme.Button.Borderless"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>