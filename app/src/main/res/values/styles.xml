<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">@color/control_activated</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="titleTextColor">@color/orange</item>
        <item name="android:actionMenuTextColor">@color/orange</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">

    </style>

    <style name="BaseCropAcrivityTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">@color/control_activated</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="titleTextColor">@color/orange</item>
        <item name="android:actionMenuTextColor">@color/orange</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_orange</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="CropActivityTheme" parent="BaseCropAcrivityTheme">

    </style>

    <!-- AlertDialog -->
    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/orange</item>
    </style>

    <!-- Button -->
    <style name="AppTheme.Button" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/button_background</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="AppTheme.Button.Borderless" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="android:textColor">@color/orange</item>
        <item name="colorButtonNormal">@color/white</item>
    </style>

    <!-- EditText -->
    <style name="AppTheme.EditText">
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>"
        <item name="android:background">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- TextView -->
    <style name="AppTheme.TextView">

    </style>

    <style name="AppTheme.TextView.Clickable">
        <item name="android:background">@color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>

        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>

        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTheme.TextView.Clickable.Button">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextView.Clickable.Button.Inversed">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="AppTheme.TextView.Clickable.Item">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextView.Header">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>
